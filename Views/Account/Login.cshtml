@{
    // Set the page title
    ViewData["Title"] = "Login";
}

<!-- Centered container using Bootstrap flexbox -->
<div class="container d-flex justify-content-center align-items-center" style="min-height: 100vh;">
    <!-- Login card box -->
    <div class="card" style="width: 100%; max-width: 400px;">
        <!-- Heading -->
        <h2 class="text-center mb-4">Login</h2>

        <!-- Display error message if login fails -->
        @if (ViewBag.Error != null)
        {
            <div class="alert alert-danger">@ViewBag.Error</div>
        }

        <!-- Login form posts to AccountController.Login by default -->
        <form asp-action="Login" method="post">
            <div class="form-group">
                <!-- Email input -->
                <label for="email">Email</label>
                <input name="email" type="email" class="form-control" required />
            </div>

            <div class="form-group mt-3">
                <!-- Password input -->
                <label for="password">Password</label>
                <input name="password" type="password" class="form-control" required />
            </div>

            <!-- Submit button -->
            <button type="submit" class="btn btn-primary mt-4 w-100">Login</button>
        </form>

        <!-- Link to registration page -->
        <p class="mt-3 text-center">
            Don't have an account? <a asp-action="Register">Register</a>
        </p>
    </div>
</div>
